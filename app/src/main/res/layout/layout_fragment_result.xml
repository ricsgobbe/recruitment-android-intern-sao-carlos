<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/id_txt_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="56sp"
        android:layout_centerInParent="true"
        android:text="GO"
        android:textColor="@android:color/white"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/id_txt_result">
        <View
            android:id="@+id/id_view_helper"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/id_txt_msg_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/id_view_helper"
            android:layout_centerInParent="true"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:text="TESTE"/>

        <ImageView
            android:id="@+id/id_img_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sentiment_satisfied_white_24dp"
            android:layout_above="@+id/id_view_helper"
            android:paddingLeft="8dp"
            android:paddingBottom="2dp"
            android:layout_toEndOf="@+id/id_txt_msg_res" />

    </RelativeLayout>

</RelativeLayout>